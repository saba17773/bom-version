@{
    ViewData["Title"] = "Login";
    Layout = "CleanLayout";
}

<div class="box">
    <div class="box-body">

        <h1 class="text-center" style="margin: 40px 0px;">เข้าสู่ระบบ</h1>

        <form asp-controller="UserApi" asp-action="Login" method="post" style="max-width: 300px; margin: auto;">
            <div class="form-group">
                <label>ชื่อผู้ใช้งาน</label>
                <input type="text" name="username" autocomplete="off" class="form-control" required autofocus />
            </div>
            <div class="form-group">
                <label>รหัสผ่าน</label>
                <input type="password" name="password" autocomplete="off" class="form-control" required />
            </div>
            <div class="form-group">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-success">ยืนยัน</button>
                <!-- <a asp-controller="User" asp-action="Register" class="btn btn-primary">ลงทะเบียน</a> -->
            </div>
        </form>
    </div>
</div>